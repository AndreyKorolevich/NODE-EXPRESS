<h1>Add new scooters</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input type="text" name="title" id="title" class="validate" required>
        <label for="title">Model scooter</label>
        <span class="helper-text" data-error="Text model name"></span>
    </div>

    <div class="input-field">
        <input type="number" name="price" id="price" class="validate" required min="5">
        <label for="price">Cost scooter</label>
        <span class="helper-text" data-error="Text cost model"></span>
    </div>

    <div class="input-field">
        <input type="text" name="img" id="img" class="validate" required>
        <label for="img">Picture`s URL</label>
        <span class="helper-text" data-error="Text picture`s URL"></span>
    </div>

    <div class="input-field">
        <textarea  name="description" id="description" class="validate materialize-textarea" required></textarea>
        <label for="description">Description</label>
        <span class="helper-text" data-error="Text description"></span>
    </div>

    <button class="btn btn-primary">Add</button>
</form>