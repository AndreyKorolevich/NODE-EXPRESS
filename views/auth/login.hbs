<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a class="active" href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if logError}}
                 <p class="error">{{logError}}</p>
            {{/if}}
            <h3>Log in shoop</h3>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input type="email" name="email" id="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Text email"></span>
                </div>

                <div class="input-field">
                    <input type="password" name="password" id="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Text password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if regError}}
                 <p class="error">{{regError}}</p>
            {{/if}}
            <h3>Create account</h3>
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input type="email" name="email" id="remail" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Text email"></span>
                </div>

                <div class="input-field">
                    <input type="text" name="name" id="name" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Text name"></span>
                </div>

                <div class="input-field">
                    <input type="password" name="password" id="rpassword" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Text password"></span>
                </div>

                <div class="input-field">
                    <input type="password" name="repeat" id="repeat" class="validate" required>
                    <label for="repeat">Repeat password</label>
                    <span class="helper-text" data-error="Text your password again"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>