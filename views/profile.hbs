<h1>Profile</h1>
<div class="row">
    <div class="col s6">
        {{#if user.avatarURL}}
             <img class="avatar"
                src="/{{user.avatarURL}}"
                alt="{{user.name}}">
        {{else}}
             <p>There`s no avatar</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input type="text" name="name" id="name" class="validate" required value="{{user.name}}">
                <label for="name"></label>
                <span class="helper-text" data-error="Text name"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Unload</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csurf}}">
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>